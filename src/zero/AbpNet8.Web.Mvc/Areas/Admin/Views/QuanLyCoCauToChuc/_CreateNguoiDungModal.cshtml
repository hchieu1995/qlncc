@using Abp.Json
@using Admin.Model

@model CreateOrEditToChucModalViewModel

<div class="modal-header" style="border-bottom: 1px solid #ebedf2; background-color: rgb(66,139,202);">
    <h4 class="text-center" style="color:white; width:100%; padding-top:5px;">
        <spam>@(L("ThemTaiKhoan") + ": " + Model.ToChuc.Ten)</spam>
    </h4>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
</div>
<div class="modal-body pt-0 pb-0">
    <div class="kt-portlet mb-0">
        <div style="margin-top: 10px;">
            <form name="UserFilterForm" id="UserFilterForm" role="form" class="row">
                <input type="hidden" id="ToChucId" name="ToChucId" value="@Model.ToChuc.Id" />
                <div class="col-md-4">
                    <div class="align-items-center">
                        <div class="input-group">
                            <input type="text" id="UsersTableFilter" class="form-control form-control-sm" placeholder="Tên đăng nhập, Họ tên">
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <button id="GetUsersButton" class="btn btn-outline-primary btn-sm btn-icon" style="margin-left:10px" type="button"><i class="flaticon-search-1" aria-label="@L("Search")"></i></button>
                </div>
            </form>

            <table id="ThemTaiKhoanTable" class="organization-members-table display table table-striped table-bordered table-hover dt-responsive">
                <thead>
                    <tr>
                        <th style="width:25px; text-align: center;">@L("STT")</th>
                        <th style="max-width: 20%; text-align: center; ">@L("TenDangNhap")</th>
                        <th style="max-width: 20%; text-align: center;">@L("HoTen")</th>
                        <th style="max-width: 25%; text-align: center;">@L("Email")</th>
                        <th style="width: 30px; text-align: center;">
                            <label class="btn ml-1 kt-checkbox kt-checkbox-outline checkbox-outline-2x kt-checkbox--primary" style="padding-left:0px">
                                <input id="checkallTK" class="chekal" type="checkbox">
                                <span></span>
                            </label>
                        </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")