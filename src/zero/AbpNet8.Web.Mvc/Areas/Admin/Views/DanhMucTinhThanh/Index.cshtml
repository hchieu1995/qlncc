@*<link href="~/view-resources/Areas/Admin/AppTopBarView/AppTopBarView.css" rel="stylesheet" />*@

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item">
        <div class="kt-container kt-container--fluid">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>Tỉnh thành</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            </div>
            <div class="kt-subheader__toolbar col-md-8" style="padding:0px">
                <div class="kt-subheader__wrapper">
                </div>
            </div>
        </div>
    </div>

    <div class="bgct kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet--mobile searchct">
            <div class="kt-portlet__body">
                <div class="kt-form" style="">
                    <div class="row col-12">
                        <div class="col-3">
                            <div class="form-group align-items-center">
                                <div class="input-group">
                                    <input type="text" id="filterText" class="form-control" placeholder="Mã tỉnh thành, tên tỉnh thành" autocomplete="off" style="z-index: 1">
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group align-items-center">
                                <button id="filterButton" class="btn btn-outline-primary" type="submit" style="padding-right:2px"><i class="flaticon-search-1" aria-label="@L("Search")"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="align-items-center" style="padding:10px">
                    <div id="gridContainer" style="height: calc(100vh - 170px)"></div>
                </div>
            </div>
        </div>
    </div>
</div>