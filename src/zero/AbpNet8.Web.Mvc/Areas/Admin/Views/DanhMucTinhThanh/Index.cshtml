@using Abp.Application.Services.Dto


@section Scripts
    {
    <script type="text/javascript" src="/view-resources/Areas/Admin/DanhMucTinhThanh/Index.js" asp-append-version="true"></script>
    @*<script src="~/Common/Scripts/dx.all.js"></script>*@
