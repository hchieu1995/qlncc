@using Abp.Application.Services.Dto
@using AbpNet8.Web.Areas.Admin.Startup
@using AbpNet8.Web.Areas.App.Models.Roles
@using Admin.Authorization

@{
    ViewBag.CurrentPageName = AppPageNames.Common.VaiTro;
}

@model RoleListViewModel

@section Scripts
    {
    <script src="~/view-resources/Areas/App/Views/Common/_PermissionTree.js"></script>
    <script src="~/view-resources/Areas/App/Views/Common/Modals/_PermissionTreeModal.js"></script>
    <script type="text/javascript" src="/view-resources/Areas/Admin/QuanLyVaiTro/Index.js" asp-append-version="true"></script>
}

<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">
    <div class="kt-subheader kt-grid__item">
        <div class="kt-container kt-container--fluid hdct">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>Vai trò</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            </div>
            <div class="kt-subheader__toolbar col-md-8" style="padding:0px">
                <div class="kt-subheader__wrapper">
                    @if (IsGranted(AppPermissions.Admin_HeThong_VaiTro_Them))
                    {
                        <button id="CreateButton" class="btn btn-sm btn-outline-primary" style="height: 34px"><i class="fa fa-plus" aria-hidden="true"></i>@L("CreateNew")</button>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="bgct kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet--mobile searchct">
            <div class="kt-portlet__body">
                <div class="kt-form" style="">
                    <div class="row col-12">
                        <div class="col-3">
                            <div class="form-group align-items-center">
                                <div class="input-group">
                                    <input type="text" id="filterText" class="form-control" placeholder="Mã vai trò, tên vai trò" autocomplete="off" style="z-index: 1">
                                </div>
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group align-items-center">
                                <button id="filterButton" class="btn btn-outline-primary" type="submit" style="padding-right:2px"><i class="flaticon-search-1" aria-label="@L("Search")"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="align-items-center" style="padding:10px">
                    <div id="gridContainer" style="height: calc(100vh - 170px)"></div>
                </div>
            </div>
        </div>
    </div>
</div>