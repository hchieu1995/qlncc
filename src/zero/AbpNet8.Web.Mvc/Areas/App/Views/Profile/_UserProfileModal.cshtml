                <div class="row">
                    <div class="col-lg-2 col-form-label">
                        <label>@L("Ten")<span style="color:red">*</span></label>
                    </div>
                    @* <div class="col-lg-9">
                        <input id="NguoiDung_Ten" class="form-control form-control-sm" type="text" name="NguoiDung_Ten" value="@Model.NguoiDung_Ten" required maxlength="225">
                    </div> *@
                </div>

                <div class="row">
                    <div class="col-lg-2 col-form-label">
                        <label>@L("NgaySinh")</label>
                    </div>
                    @* <div class="col-lg-4">
                        <input id="NguoiDung_NgaySinh" class="form-control form-control-sm date-picker" type="text" name="NguoiDung_NgaySinh" value="@Model.NguoiDung_NgaySinh">
                    </div> *@

                    <div class="col-lg-2 col-form-label">
                        <label>@L("GioiTinh")</label>
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control form-control-sm combobox" id="NguoiDung_GioiTinh" name="NguoiDung_GioiTinh">
                            <option value="">&#8203;</option>
                            <option value="1" selected="@(Model.NguoiDung_GioiTinh == 1)">@L("Nam")</option>
                            <option value="2" selected="@(Model.NguoiDung_GioiTinh == 2)">@L("Nu")</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-2 col-form-label">
                        <label>@L("Email")<span style="color:red">*</span></label>
                    </div>
                    <div class="col-lg-4">
                        <input id="NguoiDung_Email" class="form-control form-control-sm" type="email" name="NguoiDung_Email" value="@Model.NguoiDung_Email" required maxlength="225">
                    </div>

                    <div class="col-lg-2 col-form-label">
                        <label>@L("SDT")</label>
                    </div>
                    @* <div class="col-lg-3">
                        <input id="NguoiDung_SDT" class="form-control form-control-sm" type="text" name="NguoiDung_SDT" value="@Model.NguoiDung_SDT" maxlength="225">
                    </div> *@
                </div>

            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
