                        </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-2 col-form-label">
                        <label>@L("Ho")<span style="color:red">*</span></label>
                    </div>
                    @* <div class="col-lg-9">
                        <input id="NguoiDung_Ho" class="form-control form-control-sm" type="text" name="NguoiDung_Ho" value="@Model.NguoiDung_Ho" required maxlength="225">
                    </div> *@
