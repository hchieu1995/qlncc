@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("TaiKhoan")))
@model NguoiDung_ThongTinDto

<div class="modal-body">
    <form name="UserProfileModalForm" class="kt-form">
        <div class="row">
            <div class="col-lg-4">
                <div style="width:150px;height:150px;margin:auto;margin-top:10px">
                        <div id="hoveranhdaidien">
                            @* <img src="@Model.Base64"
                                 id="anhdaidien"
                                 style="width:150px;height:150px" class="img-thumbnail img-rounded user-edit-dialog-profile-image" /> *@

                            <span class="btn btn-clean fileinput-button displaynone" id="spanfileupload" style="position:relative;top:-149px;left: 120px;padding: 2px 0px 2px 5px;">
                                <i class="flaticon-edit"></i>
                                <input id="fileupload" type="file" name="files" accept="image/*" title="@L("ChonFile")">
                            </span>

                            <span id="clearfile" class="btn btn-clean displaynone" style="position:relative;top:-26px;left:82px;padding: 2px 0px 2px 5px;">
                                <i class="flaticon-refresh text-success"></i>
                            </span>

                            <input id="USDefaultFileUploadTextInput" type="hidden" value="">
