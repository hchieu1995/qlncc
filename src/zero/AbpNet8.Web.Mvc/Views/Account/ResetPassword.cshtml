@using Abp.Json
@using AbpNet8.Localization
@using AbpNet8.Web.Models.Account
@model ResetPasswordViewModel

@section Scripts
{
    <script>
        window.passwordComplexitySetting = @Html.Raw(Model.PasswordComplexitySetting.ToJsonString(indented: true));
    </script>
    <script src="/view-resources/Views/Account/ResetPassword.js"></script>
}

@section Styles{
    <link href="/metronic/common/css/login-1@(CultureHelper.IsRtl ? ".rtl" : "").css" rel="stylesheet"/>
}

<div class="login-form">
    <div class="pb-13 pt-lg-0 pt-5">
        <h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">@L("ChangePassword")</h3>
    </div>
    <form class="form pass-reset-form" asp-action="ResetPassword" method="post">
        <p>
            @L("PleaseEnterYourNewPassword")
        </p>
        <br />
        <input type="hidden" name="UserId" value="@Model.UserId.ToString()">
        <input type="hidden" name="ResetCode" value="@Model.ResetCode">
        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
        <div class="form-group mb-6">
            <input class="form-control form-control-solid h-auto rounded-lg font-size-h6" type="password" autocomplete="new-password" id="Password" placeholder="@L("Password")" name="Password" required/>
            <span class="form-text" style="color: red" id="TextNewPassword" hidden>Mật khẩu phải có ít nhất 5 ký tự.</span>
        </div>
        <div class="form-group mb-6">
            <input class="form-control form-control-solid h-auto rounded-lg font-size-h6" type="password" autocomplete="new-password" id="PasswordRepeat" placeholder="@L("PasswordRepeat")" name="PasswordRepeat" required/>
            <span class="form-text" style="color: red" id="Text2NewPasswordRepeat" hidden>Mật khẩu không phù hợp!</span>
            <span class="form-text" style="color: red" id="Text1NewPasswordRepeat" hidden>Mật khẩu phải có ít nhất 5 ký tự.</span>
        </div>
        <div class="pb-lg-0 pb-5">
            <span>&nbsp;</span>
            <button type="submit" id="SavePassword" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">@L("Save")</button>
        </div>
    </form>
</div>
